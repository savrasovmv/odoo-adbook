<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Multi Sale Order Confirmation Wizard -->
	<record id="adbook_sync_ad_sync_wizard_view" model="ir.ui.view">
        <field name="name">ad.sync_wizard.view</field>
        <field name="model">ad.sync_wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm">
                
                <p>Нажмити Обновить для синхронизации справочников с AD.</p>
                <group>

                 <field name="full_sync"/>
                </group>
                <footer>
                    <button name="sync_employer_wizard_action" string="Обновить Сотрудников" type="object" class="oe_highlight"/>
                    <button name="sync_group_wizard_action" string="Обновить Группы" type="object" class="oe_highlight"/>
                    
                </footer>
                <notebook colspan="4">
                    <page string="Комментарии">
                        <field name="result" nolabel="1"/>
                    </page>
                </notebook> 
            </form>
        </field>
    </record>

    <record id="adbook_sync_ad_sync_wizard_action" model="ir.actions.act_window">
        <field name="name">Синхронизовать с AD</field>
        <field name="res_model">ad.sync_wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <!-- <field name="binding_model_id" ref="model_ad_employer"/> -->
    </record>

    

    

</odoo>