    <template id="vote_reg_page" name="vote_reg_page">
        <t t-call="website_vote.reg_layout">
            <div id="wrap" class="wrap" contentEditable="False">
                <div class="column bg-white mt-3 p-3"> 
                    <div class="d-flex flex-grow-1 align-items-center">
                        <div class="column w-100 text-center">
                        <div><h3> Регистрация в конкурсе </h3></div>
                        <div><h1>"<t t-esc="vote.name"/>"</h1></div>
                        </div>
                    </div>

                    <div>
                        <h5> Условия участия </h5>
                        <div t-field="vote.conditions"/>

                    </div>

                    <div>
                        <!-- <h5> ФИО участника:</h5>
                        <h5> <b><t t-esc="user.name"/> </b> </h5>

                        <p> </p> -->

                        <form
                            t-attf-action="/vote/submitted/{{vote.id}}"
                            method="POST"
                            class="form-horizontal mt32 vote_reg_form"
                            enctype="multipart/form-data"
                        >
                            <input
                                type="hidden"
                                name="csrf_token"
                                t-att-value="request.csrf_token()"
                            />
                            
                            <div class="form-group">
                                <label
                                    class="control-label"
                                    for="name"
                                >ФИО участника</label>
                                <div class="">
                                    <t t-esc="user.name"/>
                                </div>
                            </div>
                            <div class="form-group">
                                
                                    
                                    <label
                                        class="control-label"
                                        for="name"
                                    >Подпись к файлу</label>
                                    <input
                                        type="text"
                                        class="form-control"
                                        name="file_text"
                                        t-attf-value="#{file_text}"
                                        required="True"
                                    />
                            </div>

                            <!-- <div class="form-group row">
                                <label for="file_text" class="col-sm-2 col-form-label">Подпись к файлу</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="file_text" id="file_text" t-att-required="true"/>
                                </div>
                            </div> -->
                            
                            <div class="form-group">
                                <div t-attf-class="o_web_sign_load_file col-auto ">
                                    <input type="file" accept="image/*" role="button" name="file" class="btn btn-link py-0"/>
                                </div>
                            </div>
                            
                            <div class="form-group mt-5">
                                <input type="checkbox" id="oe_agree" class="oe_agree"/>
                                <label for="oe_agree">
                                    С условиями участия ознакомлен и согласен
                                </label>
                            </div>
                            <div class="form-group mt-2">
                                <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                                    <button disabled="disabled" class="btn btn-primary btn-lg oe_vote_reg">Отправить</button>
                                </div>
                            </div>
                        </form>

                    </div>
            
                    
            
                </div>
            </div>
        </t>
    </template>





    


</odoo>


