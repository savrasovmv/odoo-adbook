<odoo>

    <template id="website_vote.voting_layout" name="Vote voting Layout" inherit_id="web.frontend_layout" primary="True">
        <xpath expr="//div[@id='wrapwrap']" position="before">
            <t t-set="no_livechat" t-value="True"/>
        </xpath>
       
        <xpath expr="//head/t[@t-call-assets][last()]" position="after">
            <t t-call-assets="website_vote.vote_voting_assets" lazy_load="True"/>
        </xpath>
        <xpath expr="//header" position="before">
            <t t-set="no_header" t-value="True"/>
            <t t-set="no_footer" t-value="True"/>
        </xpath>
        <xpath expr="//header" position="after">
            <div id="wrap" class="oe_structure oe_empty"/>
        </xpath>
        
    </template>


    <template id="vote_image_views" name="vote_image_views">
         <!-- <t t-set="body_classname" t-value="'o_vote_body'"/> -->
        
        <t t-call="website_vote.voting_layout">
            <div class="o_voting_main"
                t-att-voteId='vote.id'
            > 

                <!-- <div class="o_voting_head">
                    <a class="d-flex align-items-center px-3" t-attf-href="/vote/{{vote.id}}">
                        <i class="fa fa-home"></i><span class="d-none d-md-inline-block ml-1">Назад</span>
                    </a>

                </div> -->
                    <t t-set="current_index" t-value="list_ids.index(participant.id)"/>

                <div 
                    class="o_voting_content w-100 h-100"
                    >
                    <div 
                        class='o_voting_image' 
                        >
                    </div>
                    <!-- <div 
                        class='o_voting_image' 
                        t-attf-style="background-image: url(data:image/png;base64,{{participant.image_1920}}); "

                        >
                    </div> -->
                    <a t-attf-href="/vote/{{vote.id}}"  class="o_voting_exit" ><i class="fa fa-remove"/></a>

                    <a class="o_voting_prev" t-att-name='list_ids[current_index-1]'><i class="fa fa-chevron-left"/></a>
                    <a class="o_voting_next" t-att-name='list_ids[current_index+1]'><i class="fa fa-chevron-right"/></a>

                    <div class="o_voting_footer">
                        <h3 class="text-white o_voting_file_text"></h3>
                        <div class="o_voting_count"> </div>
                        <!-- <h3 class="text-white"><t t-esc="participant.file_text"/></h3>
                        
                        <t t-esc="list_ids.index(participant.id)+1"/> из <t t-esc="len(list_ids)"/> -->
                    </div>
                   
                    

                </div>
                
            </div>
        </t>
    </template>

    




    


</odoo>


