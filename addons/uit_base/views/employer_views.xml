<?xml version="1.0"?>
<odoo>
    <record id="ad_employer_view_search" model="ir.ui.view">
        <field name="name">ad.employer.view.search</field>
        <field name="model">ad.employer</field>
        <field name="arch" type="xml">
            <search string="Search Opportunities">
                <field name="name"/>
                <field name="branch_id"/>
                <field name="department_id"/>
                <field name="title"/>
                <field name="ip_phone"/>
                <field name="email"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="ad_employer_view_form" model="ir.ui.view">
        <field name="name">ad.employer.form</field>
        <field name="model">ad.employer</field>
        <field name="arch" type="xml">
            <form string="Сотрудник">
                <header>
                    <button name="action_update_from_ldap" type="object" string="Обновить из AD"/>
                    
                </header>
                <sheet>
                    <notebook>
                        <page string="Основные">  
                            <group>
                                <group string="Основные данные">
                                    <field name="name"/>
                                    <field name="organization_id"/>
                                    <field name="branch_id"/>
                                    <field name="department_id"/>
                                    <field name="title"/>
                                    <field name="birthday"/>
                                    <field name="active"/>
                                </group>
                                <group string="Справочник">
                                    <field name="photo" widget="image"/>
                                    <field name="is_view_adbook"/>
                                    <field name="sequence"/>
                                </group>
                            </group>
                        
                            <group>
                                <group string="Контакты">
                                    <field name="ip_phone"/>
                                    <field name="phone"/>
                                    <field name="sec_phone"/>
                                    <field name="email"/>
                                </group>
                                <group string="Тех. инф.">
                                    <field name="username"/>
                                    <field name="object_SID"/>
                                </group>
                            </group>

                            <group string="Текущее состояние">
                                <field name="is_fired"/>
                                <field name="fired_date"/>
                                <field name="is_vacation"/>
                                <field name="vacation_start_date"/>
                                <field name="vacation_end_date"/>
                                <field name="is_btrip"/>
                                <field name="btrip_start_date"/>
                                <field name="btrip_end_date"/>
                            </group>

                        </page>
                        <page string="Установки">  

                            <group string="Установки">
                                <field name="is_yaware"/>
                                <field name="is_mailarchiva"/>
                                <field name="is_phone_rec"/>
                                <field name="is_iw"/>
                                <field name="is_backup"/>
                                <field name="is_vpn"/>
                                <field name="is_vip"/>
                            </group>

                            <group string="Блокировки">
                                <field name="is_usb_block"/>
                                <field name="is_socnet_block"/>
                                <field name="is_mesg_block"/>
                                <field name="is_cloud_block"/>
                                <field name="is_email_block"/>
                                <field name="is_rem_ad_block"/>
                            </group>

                        </page>
                    </notebook>
                    
                </sheet>
            </form>
        </field>
    </record>

    <record id="ad_employer_view_tree" model="ir.ui.view">
        <field name="name">ad.employer.tree</field>
        <field name="model">ad.employer</field>
        <field name="arch" type="xml">
            <!-- <tree string="Channel" editable="bottom"> -->
            

            <tree>
                <field name="name"/>
                <field name="branch_id"/>
                <field name="department_id"/>
                <field name="title"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
  

    <!-- Configuration/Lead & Opportunities/Lost Reasons Menu -->
    <record id="ad_employer_action" model="ir.actions.act_window">
        <field name="name">Сотрудники</field>
        <field name="res_model">ad.employer</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p>
             Создайте новую запись
          </p>
        </field>
    </record>

