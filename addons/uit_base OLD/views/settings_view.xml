<?xml version="1.0" encoding="utf-8"?>
<odoo>   
    <record id="uid_res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.uit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="UIT" string="UIT" data-key="UIT">

                    <h2>LDAP синхронизация пользователей</h2>
                    <div class="row mt16 o_settings_container">
                        
                        <div class="col-lg-12 o_setting_box" id="UIT">
                            <div class="o_setting_right_pane" id="ldap_settings">
                                <label for="ldap_host"/>
                                <div class="text-muted">
                                    Host
                                </div>
                                <field name="ldap_host"/>

                            </div>
                        </div>

                        <div class="col-lg-6 o_setting_box" id="UIT">
                            <div class="o_setting_right_pane" id="ldap_settings">
                                <label for="ldap_port"/>
                                <div class="text-muted">
                                    Port
                                </div>
                                <field name="ldap_port"/>

                            </div>
                        </div>

                        <div class="col-lg-6 o_setting_box" id="UIT">
                            <div class="o_setting_right_pane" id="ldap_settings">
                                <label for="ldap_ssl"/>
                                <div class="text-muted">
                                    SSL?
                                </div>
                                <field name="ldap_ssl"/>

                            </div>
                        </div>

                        <div class="col-lg-12 o_setting_box" id="UIT">
                            <div class="o_setting_right_pane" id="ldap_settings">
                                <label for="ldap_search_base"/>
                                <div class="text-muted">
                                    search_base
                                </div>
                                <field name="ldap_search_base"/>

                            </div>
                        </div>

                        <div class="col-lg-12 o_setting_box" id="UIT">
                            <div class="o_setting_right_pane" id="ldap_settings">
                                <label for="ldap_search_filter"/>
                                <div class="text-muted">
                                    search_base
                                </div>
                                <field name="ldap_search_filter"/>

                            </div>
                        </div>

                        <div class="col-lg-12 o_setting_box" id="UIT">
                            <div class="o_setting_right_pane" id="ldap_settings">
                                <label for="ldap_search_group_filter"/>
                                <div class="text-muted">
                                    search_base
                                </div>
                                <field name="ldap_search_group_filter"/>

                            </div>
                        </div>
                        
                        <div class="col-lg-6 o_setting_box" id="UIT">
                            <div class="o_setting_right_pane" id="ldap_settings">
                                <label for="ldap_user"/>
                                <div class="text-muted">
                                    Имя пользователя
                                </div>
                                <field name="ldap_user"/>

                            </div>
                        </div>
                        <div class="col-lg-6 o_setting_box" id="UIT">
                            <div class="o_setting_right_pane" id="ldap_settings">
                                <label for="ldap_password"/>
                                <div class="text-muted">
                                    Пароль
                                </div>
                                <field name="ldap_password"/>

                            </div>
                        </div>

                        

                    </div>


                    

                </div>
            </xpath>
        </field>
    </record>
   
    <record id="ad_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="uid_res_config_settings_view_form_inherit"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'UIT'}</field>
    </record>

    <!-- <record id="fs_settings_menu" model="ir.ui.menu">
        <field name="action" ref="UIT.fs_settings_action"/>
    </record> -->

</odoo>