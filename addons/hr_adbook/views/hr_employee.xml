<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">

            <field name="mobile_phone" position="after">
                <field name="mobile_phone2" />
            </field>

            <field name="work_phone" position="after">
                <field name="ip_phone" />
            </field>

            <field name="birthday" position="after">
                <field name="age" />
            </field>

            
            <xpath expr="//page[@name='hr_settings']/group" position="inside">
                <group
                    name="service_information"
                    groups="hr.group_hr_user"
                    string="Стаж"
                >
                    <field name="service_start_date" />
                    <field name="service_termination_date" />
                    <field name="service_duration" invisible="1" />
                    <label for="service_duration" string="Стаж работы" />
                    <div>
                        <field name="service_duration_years" nolabel="1" />
                        <span class="ml8 mr8">year(s)</span>
                        <field name="service_duration_months" nolabel="1" />
                        <span class="ml8 mr8">month(s)</span>
                        <field name="service_duration_days" nolabel="1" />
                        <span class="ml8">day(s)</span>
                    </div>
                </group>

                <group
                    name="1с_information"
                    groups="hr.group_hr_user"
                    string="1с"
                >
                    <field name="personal_email" />
                    <field name="number_1c" />
                    <field name="employment_type_1c" />
                    <field name="guid_1c" />
                    
                </group>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page name="passport" string="Удостоверение личности" groups="base.group_erp_manager">
                    <group string="Удостоверение личности">
                        <field name="passport_type"/>
                        <field name="passport_country"/>
                        <field name="passport_number" colspan='2'/>
                        <field name="passport_series"/>
                        <field name="passport_issued_by"/>
                        <field name="passport_department_code"/>
                        <field name="passport_date_issue"/>
                        <field name="passport_date_validity"/>
                        <field name="passport_place_birth"/>

                    </group>

                    <group string="Адрес регистрации(постоянной/временной)">
                        <field name="ra1_full"/>
                        <field name="ra1_country"/>
                        <field name="ra1_region"/>
                        <field name="ra1_city"/>
                        <field name="ra1_district"/>
                        <field name="ra1_street"/>
                        <field name="ra1_house"/>
                        <field name="ra1_building"/>
                        <field name="ra1_structure"/>
                        <field name="ra1_apartment"/>
                        <field name="ra1_end_date"/>

                    </group>

                </page>
                
            </xpath>
        </field>
    </record>
</odoo>
